{# templates/products/product_detail.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block body %}
<div class="flex items-center justify-center min-h-screen">
    <div class="container mx-auto p-4">
        <h1 class="text-2xl font-bold mb-4">Product Details</h1>
        <h2 class="text-xl font-semibold">{{ product.name }}</h2>
        <p class="mt-2">{{ product.description }}</p>
        <p class="text-lg font-semibold mt-2">${{ product.price }}</p>
        {% if product.isActive %}
            <span class="inline-block bg-green-200 text-green-800 px-2 py-1 rounded text-xs font-semibold">Active</span>
        {% else %}
            <span class="inline-block bg-red-200 text-red-800 px-2 py-1 rounded text-xs font-semibold">Inactive</span>
        {% endif %}
        <p> <a href="{{ path('get_active_products') }}" class="text-blue-500 hover:underline mt-4 inline-block">  ◀︎ Back to list</a></p>
    </div>
       </div>
{% endblock %}
